@import '../../node_modules/nib'
@import '../../node_modules/jeet/stylus/jeet'

#title
  display: none
  margin-top: 20px
  background-color: red
  background: linear-gradient(top, white, black)

#slider
  center(600px)
#amount
  center(200px)
  margin-top 10px

#code
  col(1/2)
  margin-top: 20px

#original
  col(1/2)

.green
  animation-duration: 1s
  animation-fill-mode: forwards
  animation-name: greenStyle

.red
  @extend .green
  animation-name: redStyle

.green-red
  @extend .green
  animation-name: green-redStyle

.red-green
  @extend .green
  animation-name: red-greenStyle 

@keyframes redStyle {
  100% {
    background: red
  }
}

@keyframes greenStyle {
  100% {
    background: green 
  }
}

@keyframes green-redStyle {
  100% {
    background: linear-gradient(top, green, red)
  }
}

@keyframes red-greenStyle {
  100% {
    background: linear-gradient(top, red, green)
  }
}
